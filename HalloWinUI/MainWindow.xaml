<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="HalloWinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HalloWinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="HalloWinUI"
    mc:Ignorable="d">

    <Grid>
        <NavigationView
            x:Name="NavView"
            BackRequested="NavView_BackRequested"
            IsSettingsVisible="False"
            Loaded="NavView_Loaded"
            PaneDisplayMode="Top"
            SelectionChanged="NavView_SelectionChanged"
            SelectionFollowsFocus="Enabled">

            <!--  Template personnalisÃ© du header  -->
            <NavigationView.HeaderTemplate>
                <DataTemplate>
                    <TextBlock
                        Margin="0,0"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="#E67B2E"
                        Text="{Binding}" />
                </DataTemplate>
            </NavigationView.HeaderTemplate>

            <!--  Items du menu  -->
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Maisons d'Halloween" Tag="HalloWinUI.Views.MaisonsPage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEA8A;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Suivi des visites" Tag="HalloWinUI.Views.VisitesPage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE805;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <!--  Frame  -->
            <Frame
                x:Name="ContentFrame"
                Padding="0"
                NavigationFailed="ContentFrame_NavigationFailed" />
        </NavigationView>

    </Grid>
</Window>
